//---------------------------------------------------------------------------

#pragma hdrstop

#include "CreateIndex.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

void CreateIndex::IncreaseIndex(){
	(*mIndex)++;
}
//---------------------------------------------------------------------------

void CreateIndex::DecreaseIndex(){
	*mIndex--;
}
//---------------------------------------------------------------------------

int CreateIndex::GetIndex(){
	return *mIndex;
}
//---------------------------------------------------------------------------
CreateIndex::~CreateIndex(){
	delete mIndex;
};
